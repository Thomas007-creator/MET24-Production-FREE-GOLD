# =====================================================
# Supabase Configuration (MET2.4.2 - Parijs)
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# Application URLs
# =====================================================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here
REACT_APP_PRODUCTION_API_URL=https://api.your-future-self.app
REACT_APP_DEV_API_URL=https://dev.your-future-self.app

# =====================================================
# Environment Configuration
# =====================================================
NODE_ENV=production
REACT_APP_NODE_ENV=production
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true

# =====================================================
# Inter-Droplet Communication
# =====================================================
PRODUCTION_DROPLET_IP=10.0.0.10
PRODUCTION_DROPLET_PORT=3001
DEV_DROPLET_IP=10.0.0.20
DEV_DROPLET_PORT=3002
INTER_DROPLET_COMMUNICATION=true

# =====================================================
# SSL/TLS Configuration
# =====================================================
SSL_EMAIL=your-email@domain.com
DOMAIN=165.227.136.245.sslip.io
ENABLE_SSL=true

# =====================================================
# AI Service Configuration (Grok-3 Integration)
# =====================================================
# xAI/Grok API Configuration
XAI_API_KEY=sk-your-xai-api-key
XAI_BASE_URL=https://api.x.ai/v1
FREE_TOKENS_PER_USER=10000

# X OAuth Configuration (Grok-4's implementation)
X_DEV_CLIENT_ID=your-x-dev-client-id
X_OAUTH_REDIRECT_URI=tijdelijk://callback

# React App Environment Variables (for X OAuth)
REACT_APP_X_DEV_CLIENT_ID=your-x-dev-client-id
REACT_APP_X_OAUTH_REDIRECT_URI=tijdelijk://callback

# Multi-Provider AI Support
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-your-anthropic-api-key

# UltimateAI Integration (Premium Models)
# Developer's UltimateAI for free tier users only
ULTIMATEAI_API_KEY=your-ultimateai-api-key
ULTIMATEAI_EMAIL=osteomedica.utrecht@gmail.com
ULTIMATEAI_PASSWORD=your-password

# Free tier limits (per user)
FREE_ULTIMATEAI_TOKENS_PER_USER=1000
FREE_ULTIMATEAI_DAILY_LIMIT=50

# AI Service Settings
DEFAULT_AI_PROVIDER=grok-3-mini
PREMIUM_AI_PROVIDER=ultimateai
FALLBACK_AI_PROVIDER=openai

# =====================================================
# Mullvad VPN Configuration (Optional)
# =====================================================
MULLVAD_PRIVATE_KEY=your-mullvad-private-key
MULLVAD_ADDRESSES=10.64.0.1/32
MULLVAD_ENDPOINT_IP=your-mullvad-endpoint-ip
MULLVAD_ENDPOINT_PORT=51820
MULLVAD_PRESHARED_KEY=your-mullvad-preshared-key
VPN_ENABLED=false

# =====================================================
# MCP Bridge Configuration
# =====================================================
MCP_BRIDGE_PORT=3001
MCP_BRIDGE_URL=http://met24-mcp-burg:3001
VPN_MODE=true
CURSOR_DEV_IP=10.0.0.2

# =====================================================
# Security & Encryption
# =====================================================
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# =====================================================
# Database Configuration
# =====================================================
DATABASE_URL=postgresql://met24user:password@localhost:5432/met24_mbti_coach
DB_HOST=localhost
DB_PORT=5432
DB_NAME=met24_mbti_coach
DB_USER=met24user
DB_PASSWORD=your-db-password-here

# =====================================================
# Redis Configuration
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# =====================================================
# Analytics & Tracking
# =====================================================
GOOGLE_ANALYTICS_ID=your-ga-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here
SENTRY_DSN=your-sentry-dsn-here

# =====================================================
# Email Configuration
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=noreply@your-future-self.app

# =====================================================
# File Storage
# =====================================================
STORAGE_BUCKET=your-production-storage-bucket
STORAGE_REGION=ams3
STORAGE_ENDPOINT=https://ams3.digitaloceanspaces.com
STORAGE_ACCESS_KEY=your-access-key-here
STORAGE_SECRET_KEY=your-secret-key-here

# =====================================================
# External APIs
# =====================================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =====================================================
# Monitoring & Logging
# =====================================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# =====================================================
# Feature Flags
# =====================================================
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
VPN_MODE=true

# =====================================================
# SSL/TLS Configuration
# =====================================================
ACME_EMAIL=your-email@your-future-self.app
SSL_CERT_PATH=/letsencrypt/live/your-future-self.app/fullchain.pem
SSL_KEY_PATH=/letsencrypt/live/your-future-self.app/privkey.pem

# =====================================================
# Traefik Configuration
# =====================================================
TRAEFIK_DASHBOARD=true
TRAEFIK_DASHBOARD_URL=traefik.your-future-self.app
TRAEFIK_ENTRYPOINT_WEB=:80
TRAEFIK_ENTRYPOINT_WEBSECURE=:443

# =====================================================
# Performance & Caching
# =====================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# =====================================================
# Backup & Recovery
# =====================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/opt/backups











