{
  "name": "mainview-ai-coach",
  "version": "1.0.0",
  "description": "MainView - AI Persoonlijkheidscoach PWA met NEW-OnboardingFlow",
  "main": "index.js",
  "scripts": {
    "start": "DISABLE_ESLINT_PLUGIN=true PORT=3000 craco start",
    "build": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" GENERATE_SOURCEMAP=false craco build",
    "postbuild": "cp ./sw-offline-queue.js ./build/sw-offline-queue.js && cp ./sw-workbox.js ./build/sw-workbox.js || true",
    "build:direct": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" GENERATE_SOURCEMAP=false DISABLE_ESLINT_PLUGIN=true craco build && cp ./sw-offline-queue.js ./build/sw-offline-queue.js && cp ./sw-workbox.js ./build/sw-workbox.js || true",
    "build:prod": "cross-env NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=8192\" GENERATE_SOURCEMAP=false craco build",
    "build:dev": "cross-env NODE_ENV=development NODE_OPTIONS=\"--max-old-space-size=8192\" GENERATE_SOURCEMAP=true craco build",
    "build:coolify": "cross-env NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=8192\" REACT_APP_BUILD_TARGET=coolify GENERATE_SOURCEMAP=false craco build && cp ./sw-offline-queue.js ./build/sw-offline-queue.js && cp ./sw-workbox.js ./build/sw-workbox.js && cp -r ./src/bmad ./build/bmad || true",
    "analyze": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" ANALYZE=true npm run build:prod",
    "build:fast": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" GENERATE_SOURCEMAP=false DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco build",
    "eject": "react-scripts eject",
    "server": "node server/index.js",
    "server:mcp": "node server/mcp-bridge.js",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "dev:full": "concurrently \"npm run server\" \"npm run server:mcp\" \"npm start\"",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "check:format": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "code:check": "npm run lint && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run type-check",
    "docker:build:prod": "docker build -f Dockerfile.production -t met24-production .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t met24-development .",
    "deploy:production": "docker-compose -f docker-compose.production.yml up -d",
    "deploy:development": "docker-compose -f docker-compose.development.yml up -d",
    "provision:droplets": "bash scripts/provision-dual-droplets.sh",
    "setup:vpn": "bash scripts/setup-mullvad-vpn.sh",
    "deploy:coolify:prod": "curl -X POST $COOLIFY_PRODUCTION_WEBHOOK_URL",
    "deploy:coolify:dev": "curl -X POST $COOLIFY_DEVELOPMENT_WEBHOOK_URL",
    "health:prod": "curl -f https://your-domain.com/health && curl -f https://mcp.your-domain.com/health",
    "health:dev": "curl -f https://dev.your-domain.com/health",
    "logs:prod": "docker-compose -f docker-compose.production.yml logs -f",
    "logs:dev": "docker-compose -f docker-compose.development.yml logs -f",
    "dev:all": "concurrently \"npm run start:user\" \"npm run start:mcp\" \"npm run start:development\"",
    "dev:production": "concurrently \"npm run start:user\" \"npm run start:mcp\"",
    "dev:single": "npm run start:development",
    "db:test": "./test-new-supabase.sh",
    "test:unit": "react-scripts test --watchAll=false --coverage",
    "test:bmad": "node scripts/bmad-test-suite.js",
    "test:bmad:orchestrator": "node src/utils/BMADTestRunner.js",
    "test:bmad:dashboard": "node src/utils/BMADDashboardTest.js",
    "test:bmad:quick": "npm run test:bmad:orchestrator && npm run test:bmad:dashboard",
    "test:bmad:ci": "npm run test:bmad --silent",
    "component-discovery": "ts-node src/components/testing/component-discovery-cli-fixed.ts",
    "component-discovery:wellness": "ts-node src/components/testing/component-discovery-cli-fixed.ts wellness",
    "component-discovery:journaling": "ts-node src/components/testing/component-discovery-cli-fixed.ts journaling",
    "component-discovery:content": "ts-node src/components/testing/component-discovery-cli-fixed.ts content",
    "component-discovery:integration": "ts-node src/components/testing/component-discovery-cli-fixed.ts integration",
    "component-discovery:generate": "ts-node src/components/testing/component-discovery-cli-fixed.ts generate",
    "test:components": "ts-node src/components/testing/component-test-runner.ts",
    "test:mpnet-l12v2": "ts-node scripts/test-mpnet-l12v2.ts"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.79",
    "@nextui-org/react": "^2.4.0",
    "@nozbe/watermelondb": "^0.27.1",
    "@nozbe/with-observables": "^1.6.0",
    "@supabase/supabase-js": "^2.38.0",
    "@types/cors": "^2.8.19",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@xenova/transformers": "^2.17.2",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "framer-motion": "^11.18.2",
    "i18next": "^21.10.0",
    "i18next-browser-languagedetector": "^7.2.1",
    "i18next-http-backend": "^3.0.2",
    "idb": "^8.0.3",
    "lucide-react": "^0.542.0",
    "multer": "^2.0.2",
    "next-themes": "^0.2.1",
    "onnxruntime-node": "^1.23.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^12.3.1",
    "react-router-dom": "^7.8.2",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^4.9.5",
    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-webpack-plugin": "^5.0.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "fake-indexeddb": "^6.2.2",
    "isomorphic-dompurify": "^2.6.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "validator": "^13.11.0",
    "web-push": "^3.6.6",
    "webpack-bundle-analyzer": "^4.10.2",
    "workbox-build": "^7.0.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
