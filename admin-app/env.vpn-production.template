# =====================================================
# MET2.4 VPN Production Environment Variables
# 
# Voor DigitalOcean Production Droplet met VPN pipeline
# Kopieer naar .env.production en vul de waarden in
# 
# @version 1.0.0
# @author Thomas
# =====================================================

# =====================================================
# Supabase Configuration (MET2.4.2 - Parijs)
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# Application URLs
# =====================================================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here
REACT_APP_MCP_BRIDGE_URL=https://api.your-future-self.app
REACT_APP_API_URL=https://api.your-future-self.app

# =====================================================
# Environment Configuration
# =====================================================
NODE_ENV=production
REACT_APP_NODE_ENV=production
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true

# =====================================================
# VPN Configuration
# =====================================================
VPN_SERVER_URL=your-future-self.app
VPN_PEERS=1
VPN_INTERNAL_SUBNET=10.0.0.0/24
VPN_ALLOWED_IPS=10.0.0.0/24
CURSOR_DEV_IP=10.0.0.2

# =====================================================
# SSL/TLS Configuration
# =====================================================
ACME_EMAIL=your-email@domain.com
TRAEFIK_DASHBOARD=true

# =====================================================
# SSH Keys voor Development Sync
# =====================================================
SSH_PRIVATE_KEY=your-ssh-private-key-here
SSH_PUBLIC_KEY=your-ssh-public-key-here

# =====================================================
# Security & Encryption
# =====================================================
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# =====================================================
# Database Configuration
# =====================================================
DATABASE_URL=postgresql://met24user:password@localhost:5432/met24_mbti_coach
DB_HOST=localhost
DB_PORT=5432
DB_NAME=met24_mbti_coach
DB_USER=met24user
DB_PASSWORD=your-db-password-here

# =====================================================
# Redis Configuration
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# =====================================================
# Analytics & Tracking
# =====================================================
GOOGLE_ANALYTICS_ID=your-ga-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here
SENTRY_DSN=your-sentry-dsn-here

# =====================================================
# Email Configuration
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=noreply@your-future-self.app

# =====================================================
# File Storage
# =====================================================
STORAGE_BUCKET=your-storage-bucket
STORAGE_REGION=ams3
STORAGE_ENDPOINT=https://ams3.digitaloceanspaces.com
STORAGE_ACCESS_KEY=your-access-key-here
STORAGE_SECRET_KEY=your-secret-key-here

# =====================================================
# External APIs
# =====================================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =====================================================
# Monitoring & Logging
# =====================================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# =====================================================
# Feature Flags
# =====================================================
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
VPN_MODE=true

# =====================================================
# Development Sync
# =====================================================
DEV_SYNC_ENABLED=true
DEV_SYNC_INTERVAL=300
DEV_SYNC_PATH=/opt/met24-sync











