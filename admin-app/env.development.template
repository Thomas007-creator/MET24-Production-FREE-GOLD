# =====================================================
# MET2.4 Development Droplet Environment Variables
# 
# Voor DigitalOcean Development Droplet
# Kopieer naar .env.development en vul de waarden in
# 
# @version 1.0.0
# @author Thomas
# =====================================================

# =====================================================
# Supabase Configuration (MET2.4.2 - Parijs)
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# Application URLs
# =====================================================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here
REACT_APP_DEV_API_URL=https://dev.your-future-self.app
REACT_APP_PRODUCTION_API_URL=https://api.your-future-self.app

# =====================================================
# Environment Configuration
# =====================================================
NODE_ENV=development
REACT_APP_NODE_ENV=development
GENERATE_SOURCEMAP=true
DISABLE_ESLINT_PLUGIN=false

# =====================================================
# Inter-Droplet Communication
# =====================================================
PRODUCTION_DROPLET_IP=10.0.0.10
PRODUCTION_DROPLET_PORT=3001
DEV_DROPLET_IP=10.0.0.20
DEV_DROPLET_PORT=3002
INTER_DROPLET_COMMUNICATION=true

# =====================================================
# VPN Configuration
# =====================================================
VPN_SERVER_URL=dev.your-future-self.app
VPN_PEERS=1
VPN_INTERNAL_SUBNET=10.0.0.0/24
VPN_ALLOWED_IPS=10.0.0.0/24

# =====================================================
# Pre-load Management
# =====================================================
PRELOAD_MANAGEMENT=true
PRELOAD_SYNC_INTERVAL=300
PRELOAD_DIRECTORY=/opt/preloads
AUTO_SYNC_TO_PRODUCTION=true

# =====================================================
# Development Tools
# =====================================================
DEVELOPMENT_MODE=true
DEBUG_MODE=true
HOT_RELOAD=true
DEV_TOOLS_ENABLED=true

# =====================================================
# Security & Encryption
# =====================================================
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# =====================================================
# Database Configuration
# =====================================================
DATABASE_URL=postgresql://met24user:password@localhost:5432/met24_mbti_coach
DB_HOST=localhost
DB_PORT=5432
DB_NAME=met24_mbti_coach
DB_USER=met24user
DB_PASSWORD=your-db-password-here

# =====================================================
# Redis Configuration
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# =====================================================
# Analytics & Tracking
# =====================================================
GOOGLE_ANALYTICS_ID=your-ga-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here
SENTRY_DSN=your-sentry-dsn-here

# =====================================================
# Email Configuration
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=noreply@dev.your-future-self.app

# =====================================================
# File Storage
# =====================================================
STORAGE_BUCKET=your-dev-storage-bucket
STORAGE_REGION=ams3
STORAGE_ENDPOINT=https://ams3.digitaloceanspaces.com
STORAGE_ACCESS_KEY=your-access-key-here
STORAGE_SECRET_KEY=your-secret-key-here

# =====================================================
# External APIs
# =====================================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =====================================================
# Monitoring & Logging
# =====================================================
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# =====================================================
# Feature Flags
# =====================================================
ENABLE_PWA=false
ENABLE_OFFLINE_MODE=false
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=false
VPN_MODE=true

# =====================================================
# Content Management
# =====================================================
CONTENT_MANAGEMENT=true
CONTENT_SYNC_ENABLED=true
CONTENT_UPDATE_INTERVAL=120
CONTENT_BACKUP_ENABLED=true

# =====================================================
# Testing & Quality Assurance
# =====================================================
ENABLE_TESTING=true
AUTO_TESTS=true
TEST_COVERAGE=true
QUALITY_CHECKS=true











