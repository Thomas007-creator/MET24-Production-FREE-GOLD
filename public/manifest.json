  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+met24",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-data",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  },
  "features": [
    "V3 Features",
    "MBTI Assessment", 
    "Active Imagination",
    "Enhanced Journaling",
    "Challenges",
    "Levensgebieden",
    "Offline Support",
    "PWA Functionality"
  ],
  "deployment_phase": "1-core",
  "v3_features": [
    "Active Imagination V3",
    "Enhanced Journaling V3", 
    "Challenges V3",
    "Levensgebieden V3",
    "Database V14"
  ]
