version: '3.8'

services:
  # MET2.4 User App - Production
  met24-user-app:
    build:
      context: .
      dockerfile: Dockerfile.production
    container_name: met24-user-app
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - REACT_APP_NODE_ENV=production
      - REACT_APP_API_URL=http://localhost:3001
      - REACT_APP_SUPABASE_URL=${REACT_APP_SUPABASE_URL}
      - REACT_APP_SUPABASE_ANON_KEY=${REACT_APP_SUPABASE_ANON_KEY}
      - REACT_APP_MCP_BRIDGE_URL=http://met24-mcp-bridge:3001
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - met24-network

  # MCP Bridge - Production
  met24-mcp-bridge:
    build:
      context: .
      dockerfile: Dockerfile.mcp-bridge
    container_name: met24-mcp-bridge
    ports:
      - "3001:3001"
    environment:
      - NODE_ENV=production
      - REACT_APP_NODE_ENV=production
      - REACT_APP_API_URL=http://localhost:3001
      - REACT_APP_SUPABASE_URL=${REACT_APP_SUPABASE_URL}
      - REACT_APP_SUPABASE_ANON_KEY=${REACT_APP_SUPABASE_ANON_KEY}
      - MCP_API_KEY=${MCP_API_KEY}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - met24-network

networks:
  met24-network:
    driver: bridge